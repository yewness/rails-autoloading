<% if notice %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<h1>Groups</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_groups.each do |leave_group| %>
      <tr>
        <td><%= leave_group.name %></td>
        <td><%= link_to 'Edit', edit_leave_group_path(leave_group) %></td>
        <td><%= link_to 'Destroy', leave_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', [:new, :leave_group] %>
